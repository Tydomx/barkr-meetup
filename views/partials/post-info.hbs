<!-- MODULE EXAMPLE OF POST INFO -->
<article class="post block is-white">
   <div class="owner-name">
    <span class="title is-3 has-text-info has-text-weight-semibold">{{post.owner_name}}</span>
    <span class="title is-3">@{{post.user_name}}</span>
    <span class="title is-3"> | {{created_at}}</span>
  </div>
 <!--POST TILE WITH URL-->
  <div class="title is-4">
    <a class="is-capitalized" href="{{post_url}}" target="_blank">{{title}}</a>
    <span>({{owner_name}})</span>
    <span>{{post_content}}</span>
  </div>
  <!-- UPVOTES & COMMENTS-->
  <div class="meta">
  {{vote_count}} {{vote_count}}
  |
  <a href="/post/{{id}}">{{comments.length}} {{comments.length}}</a>
</div>
</article>