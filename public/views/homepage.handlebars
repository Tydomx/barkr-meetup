<div class="columns is-mobile">
  <div class="column is-two-thirds news"> BARKR NEWS
    <!-- Single Post Listing -->
    <ol class="post-list">
      {{#each posts as |post|}}
    <li>
        <article class="post">
        <div class="title">
            <a href="{{post.post_url}}" target="_blank">{{post.title}}</a>
            <span>({{post.post_url}})</span>
        </div>
        <div class="meta">
            {{post.vote_count}} point(s) by {{post.owner.user_name}} on
            {{post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
        </div>
        </article>
    </li>
      {{/each}}
    </ol>
  </div>
  <div class="column discover">Discover
    <div class="box">
        
        <div class="block discover">
            <!--ADD CARDS FOR TOP DOG OWNERS -->
        </div>
         <div class="block events">
            <!--ADD CARDS OR BUTTON FOR EVENTS -->
        </div>
    </div>
  </div>
</div>

